# Default tcsh configuration for sprite

# Set terminal title to show current directory
alias precmd 'echo -n "\033]0;${cwd}\007"'

# Set a simple prompt
set prompt = "%n@%m:%~%# "

# History settings
set history = 1000
set savehist = 1000

# Enable command completion
set autolist

# Enable color for ls
setenv CLICOLOR 1
alias ls 'ls --color=auto'
alias ll 'ls -la'
alias l 'ls -l'