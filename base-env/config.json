{
  "log_level": "info",
  "log_json": false,
  "api_listen_addr": "0.0.0.0:7778",
  
  "process_command": ["/home/sprite/launch.sh"],
  "process_working_dir": "/dev/fly_vol",
  "process_environment": [],
  "process_graceful_shutdown_timeout": "30s",
  
  "exec_wrapper_command": ["/home/sprite/exec.sh", "app"],
  
  "container_enabled": true,
  "container_socket_dir": "/var/run/sprite",
  "container_tty_timeout": "10s",
  
  "overlay_enabled": true,
  "overlay_image_size": "100G",
  "overlay_lower_path": "/mnt/app-image",
  "overlay_target_path": "/mnt/newroot",
  "overlay_skip_overlayfs": false
} 